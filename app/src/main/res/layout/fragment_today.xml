<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TodayFragment">

    <TextView
        android:id="@+id/todayTopBar"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Today"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:gravity="center"

        />
    <LinearLayout
        android:id="@+id/layoutStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:textSize="30dp"
        >
        <RadioGroup
            android:id="@+id/todayRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
        
            <RadioButton
                android:id="@+id/classesRdbutton"
                android:layout_marginTop="120dp"
                android:layout_marginStart="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Classes"
                android:textSize="15sp"
                />
            <RadioButton
                android:id="@+id/clientsRdButton"
                android:layout_marginTop="120dp"
                android:layout_marginStart="90dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Clients"
                android:textSize="15sp"
                />

        </RadioGroup>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layoutStatus"
        android:background="@color/black"
        android:layout_marginTop="5dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view"
        android:layout_marginTop="5dp"
        android:clipToPadding="false"
        android:visibility="gone"
        android:paddingBottom="60dp"
        />

    <TextView
        android:id="@+id/txtAllMemberNDF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No Data found"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/red"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addClientFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        android:visibility="gone"
        app:fabSize="normal"
        app:backgroundTint="@color/red"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        />


</RelativeLayout>